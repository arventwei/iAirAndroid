<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
   
    </style>
    
    
    <style name="form_item_style">
        <item name="android:paddingLeft">@dimen/form_item_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/form_item_vertical_padding</item>
        <item name="android:paddingRight">@dimen/form_item_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/form_item_vertical_padding</item>
    </style>
        <style name="Common" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>
    
    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/top_enter</item>
        <item name="android:windowExitAnimation">@anim/top_exit</item>
    </style>
    <style name="clockWeatherText">
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#aa000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">3.0</item>
        <item name="android:shadowRadius">2.5</item>
    </style>
    
        <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>
    
     <style name="setting_item_layout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/setting_item_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/setting_item_height</item>
    </style>
     <style name="setting_item_main_text">
        <item name="android:textSize">@dimen/setting_item_main_text_size</item>
        <item name="android:textColor">@color/setting_main_text_bg</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="setting_item_sum_text">
        <item name="android:textSize">@dimen/setting_item_sum_text_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="setting_item_checkbox">
        <item name="android:background">@drawable/rect_track_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/checkbox_rect</item>
    </style>
    <style name="setting_alarm_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/checkbox_circle</item>
    </style>
    
     <style name="setting_menu">
        <item name="android:textSize">@dimen/setting_item_main_text_size</item>
        <item name="android:textColor">@color/setting_main_text_bg</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">11.0dip</item>
    </style>
</resources>
