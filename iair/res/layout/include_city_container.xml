<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top" 
    android:orientation="vertical" >
    
<LinearLayout  
        android:id="@+id/today_air_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:layout_gravity="center"
        android:gravity="center" 
       >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
                android:layout_gravity="center"
        android:gravity="center"  >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                android:textSize="36dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="#66ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/TextView03"
                    style="@style/clockWeatherText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/weather_detail_activity_air_number_margin_top"
                    android:layout_weight="1"
                    android:paddingBottom="3.0dip"
                    android:text="@string/detail_device_pm25"
                    android:textColor="@color/white"
                    android:textSize="@dimen/detail_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/TextView04"
                    style="@style/clockWeatherText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/weather_detail_activity_air_number_margin_top"
                    android:layout_weight="1"
                    android:paddingBottom="3.0dip"
                    android:text="@string/detail_device_temp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/detail_text_size" />

                <TextView
                    android:id="@+id/TextView02"
                    style="@style/clockWeatherText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/weather_detail_activity_air_number_margin_top"
                    android:layout_weight="1"
                    android:paddingBottom="3.0dip"
                    android:text="@string/detail_device_humi"
                    android:textColor="@color/white"
                    android:textSize="@dimen/detail_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/xiaoxin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美使馆"
                android:textSize="36dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="#66ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/xiaoxin_pm25"
                    style="@style/clockWeatherText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/weather_detail_activity_air_number_margin_top"
                    android:layout_weight="1"
                    android:paddingBottom="3.0dip"
                    android:text="@string/detail_device_pm25"
                    android:textColor="@color/white"
                    android:textSize="@dimen/detail_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/xiaoxin_temp"
                    style="@style/clockWeatherText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/weather_detail_activity_air_number_margin_top"
                    android:layout_weight="1"
                    android:paddingBottom="3.0dip"
                    android:text="@string/detail_device_temp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/detail_text_size" />

                <TextView
                    android:id="@+id/xiaoxin_humi"
                    style="@style/clockWeatherText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/weather_detail_activity_air_number_margin_top"
                    android:layout_weight="1"
                    android:paddingBottom="3.0dip"
                    android:text="@string/detail_device_humi"
                    android:textColor="@color/white"
                    android:textSize="@dimen/detail_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="#66ffffff" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8°           晴车辆限行   1,6"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>
</LinearLayout>
