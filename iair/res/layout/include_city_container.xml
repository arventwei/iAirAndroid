<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top" 
    android:orientation="vertical" >
    
 <RelativeLayout
        android:id="@+id/today_air_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="10.0dip" >

        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2.0dip"
            android:text="北京"
            android:textSize="48dp" />

        <ImageView
            android:id="@+id/air_divider"
            android:layout_width="2.0dip"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cityTemp"
            android:layout_alignTop="@id/city_name"
            android:layout_marginRight="7.0dip"
            android:layout_toRightOf="@id/city_name"
            android:background="@drawable/air_divider" />

        <TextView
            android:id="@+id/city_aqi"
            style="@style/clockWeatherText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/weather_detail_activity_air_number_margin_top"
            android:layout_toRightOf="@id/air_divider"
            android:paddingBottom="3.0dip"
            android:textColor="@color/white"
            android:text="aaa"
            android:textSize="25.0sp" />

        <TextView
            android:id="@+id/cityTemp"
            style="@style/clockWeatherText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
             android:layout_below="@id/city_aqi"
          
            android:layout_marginBottom="@dimen/weather_detail_activity_air_desc_margin_bottom"
            android:layout_toRightOf="@id/air_divider"
            android:textColor="@color/white"
            android:text="bb\nsd"
            android:singleLine="false" 
            android:lines="2"
            android:textSize="15.0sp" />
        
    </RelativeLayout>

 <RelativeLayout
     android:id="@+id/embassy"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginRight="15.0dip"
     android:layout_marginTop="20.0dip" >

     <TextView
         android:id="@+id/TextView02"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginRight="2.0dip"
         android:text="美使馆"
         android:textSize="48dp" />

     <TextView
         android:id="@+id/city_aqi_us"
         style="@style/clockWeatherText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/weather_detail_activity_air_number_margin_top"
         android:layout_toRightOf="@+id/ImageView01"
         android:paddingBottom="3.0dip"
         android:text="aaa"
         android:textColor="@color/white"
         android:textSize="25.0sp" />

     <ImageView
         android:id="@+id/ImageView01"
         android:layout_width="2.0dip"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_toRightOf="@+id/TextView02"
         android:background="@drawable/air_divider" />
    
 </RelativeLayout>

 <LinearLayout
      android:layout_marginTop="40.0dip"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
      >

     
     <TextView
         android:id="@+id/city_temp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        
         android:text="20"
         android:textSize="36dp"
         android:textAppearance="?android:attr/textAppearanceLarge" />
     
     <TextView
         
         android:id="@+id/city_weather"
             android:layout_marginLeft="40.0dip"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="晴"
         android:textAppearance="?android:attr/textAppearanceMedium" />

     <TextView
     
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="40.0dip"
         android:text="车辆限行     "
         android:textAppearance="?android:attr/textAppearanceMedium" />

          <TextView
             android:id="@+id/carlimit"
       
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="3，8"
         android:textAppearance="?android:attr/textAppearanceMedium" />

 </LinearLayout>

</LinearLayout>
