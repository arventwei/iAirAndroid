<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/listview_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/portfolioStockInfoItemHeight"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/portfolioItemInfoIconNameColWidth"
            android:layout_height="@dimen/portfolioStockInfoItemHeight"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/mystocks_listitem_stockinfo_icon"
                    android:layout_width="@dimen/portfolioItemInfoIconColWidth"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/mystocks_listitem_stockname_label"
                    android:layout_width="@dimen/portfolioItemInfoNameColWidth"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_weight="1.0"
                    android:ellipsize="none"
                    android:singleLine="true"
                    android:textColor="#ffffffff"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/portfolioItemInfoIconColWidth"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/mystocks_listitem_stockcode_label"
                    android:layout_width="@dimen/portfolioItemInfoNameColWidth"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    android:textColor="@color/mystocks_stockcode_color"
                    android:textSize="12.0sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/portfolioItemInfoPriceColWidth"
            android:layout_height="@dimen/portfolioStockInfoItemHeight"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mystocks_listitem_stockprice_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15.0dip"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="26.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/portfolioItemInfoRisDecColWidth"
            android:layout_height="@dimen/portfolioStockInfoItemHeight"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mystocks_listitem_risedecline_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="8.0dip"
                android:layout_marginLeft="13.0dip"
                android:layout_marginRight="13.0dip"
                android:layout_marginTop="8.0dip"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="17.0sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/listview_divider_line_height"
        android:layout_below="@id/listview_item_layout"
        android:layout_gravity="bottom"
        android:background="@drawable/common_listview_devider"
        android:contentDescription="@null" />

</RelativeLayout>