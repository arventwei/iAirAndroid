<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/listview_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/portfolioStockInfoItemHeight"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/portfolioItemInfoIconNameColWidth"
            android:layout_height="@dimen/portfolioStockInfoItemHeight"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >



                <TextView
                    android:id="@+id/entry_name_label"
                    android:layout_width="@dimen/portfolioItemInfoNameColWidth"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1.0"
                    android:ellipsize="none"
                    android:singleLine="true"
                    android:text="aaaa"
                    android:textColor="#ffffffff"
                    android:textSize="16.0sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/portfolioItemInfoPriceColWidth"
            android:layout_height="@dimen/portfolioStockInfoItemHeight"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/entry_pm25_label"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:singleLine="true"
                android:text="230"
                android:textColor="#ffffffff"
                android:textSize="17.0sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/portfolioItemInfoRisDecColWidth"
            android:layout_height="@dimen/portfolioStockInfoItemHeight"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/entry_temp_label"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:singleLine="true"
                android:text="18°C"
                android:textColor="#ffffffff"
                android:textSize="17.0sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/portfolioItemInfoRisDecColWidth"
            android:layout_height="@dimen/portfolioStockInfoItemHeight"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/entry_comment_label"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:singleLine="true"
                android:text="湿/20"
                android:textColor="#ffffffff"
                android:textSize="17.0sp" />

        </LinearLayout>
    </LinearLayout>

    
        <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_below="@id/listview_item_layout"
        android:layout_gravity="bottom"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:background="#66ffffff" />
        
  

</RelativeLayout>