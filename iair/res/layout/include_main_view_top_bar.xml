<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@drawable/title_bar_new"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/add_city"
        android:layout_width="@dimen/title_bar_btn_width"
        android:layout_height="fill_parent"
        android:background="@drawable/main_detail_activity_btn_bg"
        android:src="@drawable/title_bar_add_city" />

    <LinearLayout
        android:id="@+id/top_blank_layout"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="益呼吸"
            android:textColor="@color/white"
            android:textSize="@dimen/weather_detail_activity_title_bar_size" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天21:50发布"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/title_bar_btn_width"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/voice_animation"
            android:layout_width="@dimen/title_bar_btn_width"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/voice_wave_s"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/voice_broadcast"
            android:layout_width="@dimen/title_bar_btn_width"
            android:layout_height="fill_parent"
            android:background="@drawable/main_detail_activity_btn_bg"
            android:src="@drawable/voice_icon" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title_bar_divide" />

    <ImageView
        android:id="@+id/choose_refresh_img"
        android:layout_width="@dimen/title_bar_btn_width"
        android:layout_height="fill_parent"
        android:background="@drawable/main_detail_activity_btn_bg"
        android:src="@drawable/title_bar_refresh"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/title_bar_shared_img"
        android:layout_width="@dimen/title_bar_btn_width"
        android:layout_height="fill_parent"
        android:background="@drawable/main_detail_activity_btn_bg"
        android:src="@drawable/title_bar_shared" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title_bar_divide" />

    <RelativeLayout
        android:id="@+id/goto_setting_img"
        android:layout_width="@dimen/title_bar_btn_width"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/goto_setting_img_icon"
            android:layout_width="@dimen/title_bar_btn_width"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/main_detail_activity_btn_bg"
            android:duplicateParentState="true"
            android:src="@drawable/title_bar_setting" />

        <ImageView
            android:id="@+id/ic_setting_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_new_main"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>