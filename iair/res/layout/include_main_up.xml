<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_up"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent" >

    <View
        android:id="@+id/topleft"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_column="0"
                android:layout_weight="1"
                android:text="Name" />

            <TextView
                android:layout_width="30dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:text="Score" >
            </TextView>

            <TextView
                android:layout_width="30dp"
                android:layout_column="2"
                android:layout_weight="1"
                android:text="Level" >
            </TextView>
        </TableRow>

        <ScrollView android:layout_height="120dp" >

            <TableLayout
                android:id="@+id/score_table"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TableRow>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:text="小新家" >
                    </TextView>

                    <TextView
                        android:layout_width="30dp"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:text="1000" >
                    </TextView>

                    <TextView
                        android:layout_width="30dp"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:text="2" >
                    </TextView>
                </TableRow>
                 <TableRow>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:text="爸爸家" >
                    </TextView>

                    <TextView
                        android:layout_width="30dp"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:text="1000" >
                    </TextView>

                    <TextView
                        android:layout_width="30dp"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:text="2" >
                    </TextView>
                </TableRow>
                 <TableRow>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:text="北京" >
                    </TextView>

                    <TextView
                        android:layout_width="30dp"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:text="1000" >
                    </TextView>

                    <TextView
                        android:layout_width="30dp"
                        android:layout_column="2"
                        android:layout_weight="1"
                        android:text="2" >
                    </TextView>
                </TableRow>
            </TableLayout>
        </ScrollView>
    </TableLayout>

    <RelativeLayout
        android:id="@+id/today_weather_extra_info"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="7.0dip"
        android:clickable="true"
        android:paddingBottom="6.0dip"
        android:paddingTop="6.0dip" >

        <ImageView
            android:id="@+id/today_down_arrow_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main_activity_extra_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/today_divider"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_above="@id/today_weather_extra_info"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:background="#66ffffff" />

    <RelativeLayout
        android:id="@+id/today_weather_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/today_divider"
        android:layout_marginBottom="8.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:clickable="true"
        android:orientation="vertical" >
    </RelativeLayout>

</RelativeLayout>